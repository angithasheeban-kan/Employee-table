@model IEnumerable<Employee_Table.Models.EmployeeViewModel>

@{
    ViewData["Title"] = "Employee Details";
}

<div class="container mt-4">
    <div class="card shadow-lg rounded-3">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">@ViewData["Title"]</h3>
        </div>
        <div class="card-body">
            <a asp-action="Create" asp-controller="Employee" class="btn btn-success mb-3">
                <i class="bi bi-plus-circle"></i> Create Employee
            </a>

            <table class="table table-bordered table-hover">
                <thead class="table-secondary">
                    <tr>
                        <th>Employee ID</th>
                        <th>Name</th>
                        <th>Position</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var employee in Model)
                    {
                        <tr>
                            <td>
                                <a asp-controller="Employee" asp-action="Detail" asp-route-id="@employee.EmployeeId" class="text-decoration-none">
                                    @employee.EmployeeId
                                </a>
                            </td>
                            <td>@employee.Name</td>
                            <td>@employee.Position</td>
                            <td>@employee.Status</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@employee.EmployeeId" class="btn btn-sm btn-primary">Edit</a>
                                <a asp-action="Delete" asp-route-id="@employee.EmployeeId" class="btn btn-sm btn-danger">Delete</a>
                                
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div> 