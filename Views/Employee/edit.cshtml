
@model Employee_Table.Models.EmployeeViewModel

@{
    ViewData["Title"] = "Edit Employee";
}


<h5 class="text-center">Edit Employee</h5>
<div class="card shadow p-4 mt-3" style="max-width: 600px; margin: auto; border-radius: 10px;">

<form asp-action="Edit" method="post">
    <!-- Hidden EmployeeId -->
    <input type="hidden" asp-for="EmployeeId" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Position" class="form-label"></label>
        <input asp-for="Position" class="form-control" />
        <span asp-validation-for="Position" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Status" class="form-label"></label>
        <input asp-for="Status" class="form-control" />
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
