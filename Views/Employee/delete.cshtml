
@model Employee_Table.Models.EmployeeViewModel

@{
    ViewData["Title"] = "Delete Employee";
}

<h5 class="text-center">Delete Employee</h5>
<p style="text-align:center;">Are you sure you want to delete this employee?</p>

<div class="card shadow p-4 mt-3" style="max-width: 600px; margin: auto; border-radius: 10px;">
<div class="mb-3"><b>ID:</b> @Model.EmployeeId</div>
<div class="mb-3"><b>Name:</b> @Model.Name</div>
<div class="mb-3"><b>Position:</b> @Model.Position</div>
<div class="mb-3"><b>Status:</b> @Model.Status</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="EmployeeId" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="Index" class="btn btn-secondary">No, Back</a>
</form>
